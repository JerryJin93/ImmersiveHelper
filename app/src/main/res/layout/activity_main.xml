<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/immersive_status_bar_with_img_on_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/immersive_status_bar_with_img_on_top"/>

    <Button
        android:id="@+id/immersive_status_bar_with_solid_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/immersive_status_bar_with_solid_color"/>

    <Button
        android:id="@+id/cutout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cutout"/>

</LinearLayout>